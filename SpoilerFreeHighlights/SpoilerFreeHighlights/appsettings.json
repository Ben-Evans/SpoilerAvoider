{
  "AllowedHosts": "*",
  "BaseAddress": "https://localhost:7137/",
  "YouTubeApiKey": "",
  "ScheduleRefreshHours": 12,
  "YouTubeRefreshMinutes": 15,
  "DataCleanupDays": 14,
  "FetchDaysBack": 7,
  "FetchDaysForwards": 1,
  "DisplayDaysBack": 3,
  "DisplayDaysForwards": 0,
  "YouTube": {
    "LeaguePlaylists": {
      "Nhl": {
        "SelectPlaylist": "All",
        "Playlists": [
          {
            // Regular Season Playlist
            // Requires new playlist yearly & one for playoffs too
            "Id": "PLo12SYwt93SQP81ntu8rz9QcAHTNQaFI3",
            "Name": "2025-26 NHL Highlights, News and Analysis",
            "ChannelName": "@sportsnet",
            "RequiredVideoPartMatches": 3,
            "RequiredVideoTitlePercentageMatch": 96,
            // NHL Highlights | Devils vs. Maple Leafs - October 21, 2025
            // NHL Game Highlights | Penguins vs. Sharks - Oct 18, 2025
            "TitleIdentifiers": [
              "NHL Highlights",
              "NHL Game Highlights"
            ],
            "TeamFormats": [
              "{TeamNameA} vs. {TeamNameB}"
            ],
            "DateFormats": [
              "MMMM d, yyyy",
              "MMM d, yyyy"
            ]
          }
          //{
          //  // Playoff Playlist -- OLD PLAYLIST
          //  // Requires new playlist yearly & one for playoffs too
          //  "Id": "PLo12SYwt93SSAClobQd6Pmps7-b6sW9Z1",
          //  "Name": "2025 Stanley Cup Playoffs | NHL Highlights, News and Interviews",
          //  "ChannelName": "@sportsnet",
          //  "RequiredVideoPartMatches": 3,
          //  // Stanley Cup Final Game 6 Highlights | Oilers vs. Panthers - June 17, 2025
          //  // NHL Game 3 Highlights | Oilers vs. Panthers - June 9, 2025
          //  "TitleIdentifiers": [
          //    "NHL Highlights",
          //    "NHL Game Highlights",
          //    "NHL Game {GameNumber} Highlights"
          //  ],
          //  "TeamFormats": [
          //    "{TeamNameA} vs. {TeamNameB}"
          //  ],
          //  "DateFormats": [
          //    "MMMM d, yyyy",
          //    "MMM d, yyyy"
          //  ]
          //}
        ]
      },
      "Mlb": {
        "SelectPlaylist": "Single",
        "Playlists": [
          {
            // Requires new playlist yearly
            "Id": "PLL-lmlkrmJanq-c41voXY4cCbxVR0bjxR",
            "Name": "2025 Game Highlights",
            "ChannelName": "@MLB",
            "RequiredVideoPartMatches": 3,
            "RequiredVideoTitlePercentageMatch": 96,
            // Mariners vs. Blue Jays ALCS Game 7 Highlights (10/20/25) | MLB Highlights
            // Rays vs. Blue Jays Game Highlights (9/28/25) | MLB Highlights
            "TitleIdentifiers": [
              "MLB Highlights"
            ],
            "TeamFormats": [
              "{TeamNameA} vs. {TeamNameB}"
            ],
            "DateFormats": [
              "(M/d/yy)"
            ]
          }
        ]
      },
      "Cfl": {
        "SelectPlaylist": "First",
        "Playlists": [
          {
            // Shouldn't need to update playlist
            "Id": "PL6ndzuHRRemBD4OSSinVDddyjw_W0-My6",
            "Name": "CFL",
            "ChannelName": "TSN",
            "RequiredVideoPartMatches": 3,
            "RequiredVideoTitlePercentageMatch": 96,
            // CFL WEEK 20: Toronto Argonauts vs. Calgary Stampeders | FULL HIGHLIGHTS
            // CFL WEEK 19 HIGHLIGHTS: Ottawa Redblacks vs. Montreal Alouettes | FULL HIGHLIGHTS
            // CFL WEEK 1: Edmonton Elks vs. B.C. Lions | FULL HIGHLIGHTS
            // CFL WEEK 2: Winnipeg Blue Bombers vs. BC Lions | FULL HIGHLIGHTS
            // Toronto Argonauts vs. Winnipeg Blue Bombers | 111th Grey Cup Highlights
            // CFL West Final: Roughriders 22, Blue Bombers 38
            // WEST SEMI-FINAL: BC Lions vs. Saskatchewan Roughriders FULL HIGHLIGHTS
            // CFL WEEK 21: Calgary Stampeders vs. Saskatchewan Roughriders FULL HIGHLIGHTS
            "TitleIdentifiers": [
              "FULL HIGHLIGHTS",
              "Grey Cup Highlights",
              "CFL West Final",
              "CFL East Final",
              "WEST SEMI-FINAL",
              "EAST SEMI-FINAL"
            ],
            "TeamFormats": [
              "{TeamCityA} {TeamNameA} vs. {TeamCityB} {TeamNameB}"
            ],
            "DateFormats": [
              // "" - no date
              "CFL Week {WeekNumber}"
            ]
          },
          {
            // Requires new playlist yearly
            "Id": "PL6ndzuHRRemADTppEA6X_uAhgyiU_2ORj",
            "Name": "CFL Highlights",
            "ChannelName": "TSN",
            "RequiredVideoPartMatches": 3,
            "RequiredVideoTitlePercentageMatch": 96,
            // CFL WEEK 20: Toronto Argonauts vs. Calgary Stampeders | FULL HIGHLIGHTS
            // CFL WEEK 19 HIGHLIGHTS: Ottawa Redblacks vs. Montreal Alouettes | FULL HIGHLIGHTS
            // CFL WEEK 1: Edmonton Elks vs. B.C. Lions | FULL HIGHLIGHTS
            // CFL WEEK 2: Winnipeg Blue Bombers vs. BC Lions | FULL HIGHLIGHTS
            "TitleIdentifiers": [
              "FULL HIGHLIGHTS"
            ],
            "TeamFormats": [
              "{TeamCityA} {TeamNameA} vs. {TeamCityB} {TeamNameB}"
            ],
            "DateFormats": [
              "CFL Week {WeekNumber}"
            ]
          }
        ]
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Expressions" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '/_framework/%' or RequestPath like '/%.css' or RequestPath like '/%.js' or RequestPath like '/favicon.ico' or RequestPath like '/appsettings.json' or RequestPath like '/appsettings.Development.json'"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "%APP_BASE_DIR%Resources/Logs/spoiler-avoider_.log",
          "rollingInterval": "Month"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "Spoiler-Avoider"
    }
  }
}
