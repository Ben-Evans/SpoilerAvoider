{
  "ConnectionStrings": {
    //"DefaultConnection": "Data Source=%APP_DB_DIR%\\spoiler-avoider.db",
    "DefaultConnection": "Server=localhost;Database=spoiler-avoider;Trusted_Connection=True;TrustServerCertificate=true"
  },
  "AllowedHosts": "*",
  "BaseAddress": "https://localhost:7137",
  "BlazorClientBaseAddress": "https://localhost:7107",
  "YouTubeApiKey": "",
  "ScheduleRefreshHours": 12,
  "YouTubeSchedulerMinuteIntervals": [ 0, 15, 30, 45 ],
  "DataCleanupDaysBack": 14,
  "FetchDaysBack": 7,
  "FetchDaysForward": 1,
  "StrictVideoCaching": true,
  "DisplayDaysBack": 3,
  "DisplayDaysForward": 0,
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Expressions" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '/_framework/%' or RequestPath like '/%.css' or RequestPath like '/%.js' or RequestPath like '/favicon.ico' or RequestPath like '/appsettings%' or RequestPath like '/Resources%'"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "%APP_BASE_DIR%Resources/Logs/spoiler-avoider_.log",
          "rollingInterval": "Month"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "Spoiler-Avoider"
    }
  }
}
