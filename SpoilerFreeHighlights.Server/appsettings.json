{
  "AllowedHosts": "*",
  "BaseAddress": "https://localhost:7137/",
  "YouTubeApiKey": "",
  "ScheduleRefreshHours": 12,
  "YouTubeSchedulerMinuteIntervals": [ 0, 15, 30, 45 ],
  "DataCleanupDays": 14,
  "FetchDaysBack": 7,
  "FetchDaysForwards": 1,
  "StrictVideoCaching": true,
  "DisplayDaysBack": 3,
  "DisplayDaysForwards": 0,
  "YouTube": {
    "LeaguePlaylists": {
      "Nhl": {
        "SelectPlaylist": "All",
        "Playlists": [
          {
            // Regular Season Playlist
            // Requires new playlist yearly & one for playoffs too
            "Id": "PLo12SYwt93SQP81ntu8rz9QcAHTNQaFI3",
            "Name": "2025-26 NHL Highlights, News and Analysis",
            "ChannelName": "@sportsnet",
            "RequiredVideoPartMatches": 3,
            "RequiredVideoTitlePercentageMatch": 96,
            // NHL Highlights | Devils vs. Maple Leafs - October 21, 2025
            // NHL Game Highlights | Penguins vs. Sharks - Oct 18, 2025
            // ^(?<identA>NHL (?:|Game )Highlights) \| (?<teamA>.+?) vs\. (?<teamB>.+?) - (?<date>\w+ \d{1,2}, \d{4})$
            "TitlePattern": "^(?<identA>NHL (?:|Game )Highlights) \\| (?<teamA>.+?) vs\\. (?<teamB>.+?) - (?<date>\\w+ \\d{1,2}, \\d{4})$",

            "TitleIdentifiers": [
              "NHL Highlights",
              "NHL Game Highlights"
            ],
            "TeamFormats": [
              "{TeamNameA} vs. {TeamNameB}"
            ],
            "DateFormats": [
              "MMMM d, yyyy",
              "MMM d, yyyy"
            ]
          }
