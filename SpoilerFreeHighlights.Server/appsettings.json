      "Mlb": {
        "SelectPlaylist": "Single",
        "Playlists": [
          {
            // Requires new playlist yearly
            "Id": "PLL-lmlkrmJanq-c41voXY4cCbxVR0bjxR",
            "Name": "2025 Game Highlights",
            "ChannelName": "@MLB",
            "RequiredVideoPartMatches": 3,
            "RequiredVideoTitlePercentageMatch": 96,
            // Rays vs. Blue Jays Game Highlights (9/28/25) | MLB Highlights
            // Tigers vs. Guardians AL Wild Card Game 1 Highlights (9/30/25) | MLB Highlights
            // Padres vs. Cubs NL Wild Card Game 1 Highlights (9/30/25) | MLB Highlights
            // Cubs vs. Brewers NLDS Game 1 Highlights (10/4/25) | MLB Highlights
            // Yankees vs. Blue Jays ALDS Game 1 Highlights (10/4/25) | MLB Highlights
            // Dodgers vs. Phillies NL Divisional Series Game 1 Highlights (10/4/25) | MLB Highlights
            // Mariners vs. Blue Jays ALCS Game 7 Highlights (10/20/25) | MLB Highlights
            // Dodgers vs. Brewers NLCS Game 1 Highlights (10/13/25) | MLB Highlights
            // Dodgers vs. Blue Jays World Series Game 7 Highlights (11/1/25) | MLB Highlights
            // ^(?<teamA>.+) vs\. (?<teamB>.+?) (?<identA>(?:(?:(?:AL|NL)(?:CS|DS)|(?:NL Division|World) Series|(?:AL|NL) Wild Card) )?Game(?:| \d) Highlights) \((?<date>\d{1,2}/\d{1,2}/\d{1,2})\) \| (?<identB>MLB Highlights)$
            "TitlePattern": "^(?<teamA>.+) vs\\. (?<teamB>.+?) (?<identA>(?:(?:(?:AL|NL)(?:CS|DS)|(?:NL Division|World) Series|(?:AL|NL) Wild Card) )?Game(?:| \\d) Highlights) \\((?<date>\\d{1,2}/\\d{1,2}/\\d{1,2})\\) \\| (?<identB>MLB Highlights)$",

            "TitleIdentifiers": [
              "MLB Highlights"
            ],
            "TeamFormats": [
              "{TeamNameA} vs. {TeamNameB}"
            ],
            "DateFormats": [
              "M/d/yy"
            ]
          }
        ]
      },
      "Cfl": {
        "SelectPlaylist": "First",
        "Playlists": [
          {
            // Shouldn't need to update playlist
            "Id": "PL6ndzuHRRemBD4OSSinVDddyjw_W0-My6",
            "Name": "CFL",
            "ChannelName": "TSN",
            "RequiredVideoPartMatches": 3,
            "RequiredVideoTitlePercentageMatch": 96,
            // CFL WESTERN SEMI-FINAL: Calgary Stampeders vs. BC Lions | FULL HIGHLIGHTS
            // CFL EASTERN SEMI-FINAL: Montreal Alouettes vs. Winnipeg Blue Bombers | FULL HIGHLIGHTS
            // CFL WEEK 20: Toronto Argonauts vs. Calgary Stampeders | FULL HIGHLIGHTS
            // CFL WEEK 19 HIGHLIGHTS: Ottawa Redblacks vs. Montreal Alouettes | FULL HIGHLIGHTS
            // CFL WEEK 1: Edmonton Elks vs. B.C. Lions | FULL HIGHLIGHTS
            // CFL WEEK 2: Winnipeg Blue Bombers vs. BC Lions | FULL HIGHLIGHTS
            // Toronto Argonauts vs. Winnipeg Blue Bombers | 111th Grey Cup Highlights
            // CFL West Final: Roughriders 22, Blue Bombers 38
            // CFL East Final: Argonauts 30, Alouettes 28 | FULL HIGHLIGHTS
            // WEST SEMI-FINAL: BC Lions vs. Saskatchewan Roughriders FULL HIGHLIGHTS
            // EAST SEMI-FINAL: Ottawa Redblacks vs. Toronto Argonauts FULL HIGHLIGHTS
            // CFL WEEK 21: Calgary Stampeders vs. Saskatchewan Roughriders FULL HIGHLIGHTS

            // TODO: Pattern below matches everything 'CFL West Final: Roughriders 22, Blue Bombers 38' & 'CFL East Final: Argonauts 30, Alouettes 28 | FULL HIGHLIGHTS'
            // ^(?<identA>CFL (?:WEEK \d+(?:: | HIGHLIGHTS: )|(?:WESTERN|EASTERN|WEST|EAST) SEMI-FINAL: |(?:West|East) Final: )|(?:\d+(?:st|nd|rd|th) Grey Cup ))?(?<teamA>.+?) vs\. (?<teamB>.+?)(?:\s+\|\s+(?<identB>FULL HIGHLIGHTS|\d+(?:st|nd|rd|th) Grey Cup Highlights)|\s+(?<identB>FULL HIGHLIGHTS))$
            "TitlePattern": "(?<identA>CFL (?:WEEK \\d+(?:: | HIGHLIGHTS: )|(?:WESTERN|EASTERN|WEST|EAST) SEMI-FINAL: |(?:West|East) Final: )|(?:\\d+(?:st|nd|rd|th) Grey Cup ))?(?<teamA>.+?) vs\\. (?<teamB>.+?)(?:\\s+\\|\\s+(?<identB>FULL HIGHLIGHTS|\\d+(?:st|nd|rd|th) Grey Cup Highlights)|\\s+(?<identB>FULL HIGHLIGHTS))",

            "TitleIdentifiers": [
              "FULL HIGHLIGHTS",
              "Grey Cup Highlights",
              "CFL West Final",
              "CFL East Final",
              "WEST SEMI-FINAL",
              "EAST SEMI-FINAL"
            ],
            "TeamFormats": [
              "{TeamCityA} {TeamNameA} vs. {TeamCityB} {TeamNameB}"
            ],
            "DateFormats": [
              // "" - no date? vs CFL Week (any number or two)
              //"CFL Week {WeekNumber}"
            ]
          },
          //{
          //  // Requires new playlist yearly
          //  "Id": "PL6ndzuHRRemADTppEA6X_uAhgyiU_2ORj",
          //  "Name": "CFL Highlights",
          //  "ChannelName": "TSN",
          //  "RequiredVideoPartMatches": 3,
          //  "RequiredVideoTitlePercentageMatch": 96,
          //  "TitleIdentifiers": [
          //    "FULL HIGHLIGHTS"
          //  ],
          //  "TeamFormats": [
          //    "{TeamCityA} {TeamNameA} vs. {TeamCityB} {TeamNameB}"
          //  ],
          //  "DateFormats": [
          //    // "CFL Week {WeekNumber}"
          //  ]
          //}
        ]
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Expressions" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '/_framework/%' or RequestPath like '/%.css' or RequestPath like '/%.js' or RequestPath like '/favicon.ico' or RequestPath like '/appsettings%' or RequestPath like '/Resources%'"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "%APP_BASE_DIR%Resources/Logs/spoiler-avoider_.log",
          "rollingInterval": "Month"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "Spoiler-Avoider"
    }
  }
}
